<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="72dp"
    android:clickable="false"
    android:contextClickable="false"
    android:touchscreenBlocksFocus="false"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Movie Name"
        android:id="@+id/movieName"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textColor="@color/colorBlack"
        android:layout_marginBottom="8dp"
        android:textSize="16sp"
        android:layout_marginTop="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Date Recorded"
        android:id="@+id/recordDate"
        android:textColor="@color/colorWhiteDark"
        android:textSize="14sp"
        android:layout_alignTop="@+id/viewerName"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Viewer Name"
        android:id="@+id/viewerName"
        android:textColor="@color/colorWhiteDark"
        android:textSize="14sp"
        android:layout_below="@+id/movieName"
        android:layout_alignEnd="@+id/movieName" />

</RelativeLayout>