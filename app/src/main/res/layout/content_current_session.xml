<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_current_session"
    tools:context="com.ryanarifswana.bioflix.CurrentSessionActivity"
    android:background="@color/colorPrimaryDarkest">

    <Space
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/realtime_heart_monitor" />

    <Space
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/realtime_heart_monitor"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/realtime_sweat_monitor" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="00:00:00"
        android:id="@+id/timer"
        android:layout_below="@+id/realtime_sweat_monitor"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimaryLightest"
        android:textSize="40sp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timer"
        android:weightSum="1"
        android:paddingTop="10dp"
        android:id="@+id/linearLayout">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp"
                android:outlineProvider="background">

                <View android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:background="@drawable/circle"
                    android:layout_gravity="center_vertical"
                    android:autoText="false"
                    android:id="@+id/circleHr"
                    android:focusable="false"
                    android:contextClickable="false"
                    android:focusableInTouchMode="false" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="..."
                    android:id="@+id/hrText"
                    android:textColor="@color/colorPrimaryLightest"
                    android:textSize="35dp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:singleLine="true"
                    android:layout_margin="10dp"
                    android:elegantTextHeight="false"
                    android:enabled="false" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/heartIcon"
                    android:src="@drawable/ic_favorite_red_300_24dp"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_marginBottom="10dp"
                    android:contentDescription="Heart Rate" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp">

                <View android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:background="@drawable/circle"
                    android:layout_gravity="center_vertical"
                    android:autoText="false"
                    android:id="@+id/circleGsr"
                    android:contextClickable="false" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="..."
                    android:id="@+id/gsrText"
                    android:textColor="@color/colorPrimaryLightest"
                    android:textSize="35dp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:singleLine="true" />

            </FrameLayout>

        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Warning"
        android:id="@+id/warningText"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/linearLayout"
        android:textColor="@color/colorAccentLightest"
        android:textSize="16sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/startSession"
        android:id="@+id/startButton"
        android:onClick="startButton"
        android:layout_gravity="center_horizontal"
        android:background="@color/ripple_material_dark"
        android:textColor="@color/primary_material_light"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_below="@+id/warningText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:clickable="false" />

</RelativeLayout>
